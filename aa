function Creature(position, sizeX, sizeY){ // this function works basically like a class
    this.CreatureData = new Object();
    
    
    this.CreatureData["AttackSpeed"] = 10;
    this.CreatureData["AttackRange"] = 10;
    this.CreatureData["Damage"] = 10;
    this.CreatureData["MoveStep"] = 4;
    this.CreatureData["Health"] = 100;
    this.CreatureData["Hitbox"] = new Rectangle(sizeX, sizeY);
    
    add(this.CreatureData["Hitbox"]);
    
    //CreatureHitbox.push(creaturebox);
    giveGravity(this.CreatureData["Hitbox"]);
    
    this.PrintCreature = function(type){
        println("Creature");
        // spawn creature of type
    }   
    this.Attack = function(){
        
    }
    this.Spawn = function(x, y){
        
    }
    
    this.Die = function(creature2){
        print("die");
        for(var i = 0; i < CreatureHolder.length; i++){
            if(CreatureHolder[i].CreatureData["Health"] <= 0){
                print("equals i");
                remove(CreatureHitbox[i]);
                CreatureHolder.remove(i);
                CreatureHitbox.remove(i);
            }
        }    
    }
    
}

